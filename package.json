{
    "name": "acctrack-frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "dist-electron/main.js",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "dev:react": "vite",
        "dev:electron": "electron .",
        "build": "tsc && vite build",
        "lint": "eslint .",
        "format": "prettier --write .",
        "preview": "vite preview",
        "transpile": "tsc --project src/electron/tsconfig.json",
        "dist-mac": "pnpm run transpile && pnpm run build && electron-builder --mac --arm64",
        "dist-win": "pnpm run transpile && pnpm run build && electron-builder --win --x64",
        "dist-linux": "pnpm run transpile && pnpm run build && electron-builder --linux --x64"
    },
    "dependencies": {
        "7zip-bin": "^5.2.0",
        "@ant-design/icons": "^5.6.1",
        "@tailwindcss/vite": "^4.0.5",
        "antd": "^5.23.4",
        "axios": "^1.7.9",
        "framer-motion": "^12.4.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-hook-form": "^7.54.2",
        "react-icons": "^5.4.0",
        "react-router-dom": "^7.1.5",
        "tailwindcss": "^4.0.5",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@types/node": "^22.13.10",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react-swc": "^3.8.0",
        "electron": "^34.3.3",
        "electron-builder": "^25.1.8",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^15.15.0",
        "prettier": "^3.5.3",
        "typescript": "~5.7.3",
        "typescript-eslint": "^8.26.1",
        "vite": "^6.2.2",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "engines": {
        "npm": "please-use-pnpm",
        "pnpm": ">=9.0.0"
    }
}
